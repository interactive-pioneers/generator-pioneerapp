<!DOCTYPE html>
<html class="no-js" lang="{{meta.lang}}">
  <head>
    <title>{{title}}</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="{{meta.description}}">
    <meta name="keywords" content="{{meta.keywords}}">
    <meta name="google-site-verification" content="<Google Site Verification key here>">

    <meta property="og:type" content="website" />
    <meta property="og:title" content="{{title}}" />
    <meta property="og:description" content="{{meta.sharing}}" />
    <meta property="og:image" content="<Image for Facebook>.png" />
    <link rel="image_src" type="image/png" href="<Share icon>.png" />
    <link rel="apple-touch-icon" href="<Apple touch icon>.png">
    <meta property="og:image:type" content="image/png" />
    <meta property="og:url" content="<Site URI>{{meta.canonical}}" />
    <meta property="og:site_name" content="<Site name>" />

    <link rel="canonical" href="<Site URI>{{meta.canonical}}" />
    <link rel="shortcut icon" href="{{assets}}favicon.ico" type="image/x-icon">
    <!-- build:css(.tmp) {{assets}}{{config.path.styles}}main.css -->
    <link rel="stylesheet" href="{{assets}}{{config.path.styles}}main.css" type="text/css" media="all">
    <!-- endbuild -->
    <!-- build:js {{assets}}{{config.path.script}}modernizr.js -->
    <script src="{{assets}}{{config.path.bower}}modernizr/modernizr.js"></script>
    <!-- endbuild -->
    <!--[if IE 8]>
    <script src="{{assets}}{{config.path.script}}ie.js"></script>
    <![endif]-->
  </head>
  <body>
    <div>
      {{> header }}
      <div id="content">
        <main>
          {{> body }}
        </main>
      </div>
      {{> footer }}
